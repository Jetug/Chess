<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess"
        xmlns:vm="clr-namespace:Chess.ViewModels"
        xmlns:Views="clr-namespace:Chess.Views" 
        x:Class="Chess.MainWindow"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="660" Width="760.001" 
    
        >
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="KeyDown">
            <i:InvokeCommandAction 
                Command="{Binding EscapeDown}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="67*"/>
        </Grid.ColumnDefinitions>

        <Button 
            x:Name="StartButton"
            Content="Начать игру" 
            HorizontalAlignment="Left" 
            Margin="5,260,0,0" 
            VerticalAlignment="Top" 
            Width="79" Height="61" 
            Background="#FF747474" Grid.ColumnSpan="2"
            Command="{Binding Start}"
            >
            <Button.Effect>
                <DropShadowEffect 
                    Color="Black" Direction="310"
                    ShadowDepth="8" Opacity="0.4"/>
            </Button.Effect>
        </Button>

        <ContentPresenter
            Content="{Binding Content}"
            Name="MainContent"
            Width="560" Height="560" 
            Margin="10,10,33.333,50.667"
            Grid.Column="2" OpacityMask="#FFCDCDCD"/>
        <Label 
            Grid.ColumnSpan="2" 
            Content="♟" 
            HorizontalAlignment="Left" 
            Margin="10,120,0,0" 
            VerticalAlignment="Top" 
            Height="70" Width="70"
            HorizontalContentAlignment="Center" 
            VerticalContentAlignment="Center" 
            FontSize="36" 
            FontFamily="Lucida Bright"
            Foreground="{DynamicResource WhiteCellBrush}">
            <Label.Effect>
                <DropShadowEffect>

                </DropShadowEffect>
            </Label.Effect>
        </Label>
        <DataGrid Grid.ColumnSpan="2" 
                  HorizontalAlignment="Left" 
                  Height="260" Width="78"
                  VerticalAlignment="Top"
                  ItemsSource="{Binding Test}" Margin="6,0,0,0">
            <DataGrid.Columns/>
        </DataGrid>
    </Grid>
</Window>
